<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="278dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
           >

            <ImageView
                android:id="@+id/imagen_item"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/prognatismo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_item"
                style="@style/txt_titol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/crema_rellenar"
                android:gravity="center"
                android:text="titulo_item" />

            <TextView
                android:id="@+id/item_descripcion"
                style="@style/txt_contenido"
                android:layout_width="match_parent"
                android:layout_height="121dp"
                android:layout_weight="1"
                android:text="descrpcion" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>