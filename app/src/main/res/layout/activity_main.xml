<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_fondo_inicio"
    android:contentDescription="@string/busquedad"
    tools:context=".MainActivity">

    <Space
        android:id="@+id/space"
        android:layout_width="48dp"
        android:layout_height="524dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548" />

    <Space
        android:id="@+id/space2"
        android:layout_width="48dp"
        android:layout_height="524dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="56dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="680dp" />

    <Button
        android:id="@+id/btn_ingresar"
        style="@style/txt_boton_amarillo"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:background="@color/naranja_boton"
        android:gravity="center"
        android:text="@string/ingresar"
        android:onClick="ingresar_datos"
        app:layout_constraintEnd_toEndOf="@+id/im_inicio"
        app:layout_constraintStart_toStartOf="@+id/im_inicio"
        app:layout_constraintTop_toBottomOf="@+id/im_inicio" />

    <Button
        android:id="@+id/btn_registrar"
        style="@style/txt_boton"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@color/crema_rellenar"
        android:gravity="center"
        android:onClick="registrar_datos"
        android:text="@string/registro"
        app:layout_constraintEnd_toEndOf="@+id/btn_ingresar"
        app:layout_constraintStart_toStartOf="@+id/btn_ingresar"
        app:layout_constraintTop_toBottomOf="@+id/btn_ingresar" />

    <ImageView
        android:id="@+id/im_inicio"
        android:layout_width="302dp"
        android:layout_height="204dp"
        android:layout_marginTop="96dp"
        android:contentDescription="@string/busquedad"
        app:layout_constraintEnd_toStartOf="@+id/space"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toEndOf="@+id/space2"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:srcCompat="@drawable/diente_sabio1" />

</androidx.constraintlayout.widget.ConstraintLayout>